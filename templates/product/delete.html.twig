{% extends 'base.html.twig' %}

{% block title %}
	{{ 'deleteProduct'|trans({}, 'messages') }}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row mb-3">
			<div class="col-md-6">
				<h6 class="text-muted mb-0 fs-6">
					<small>{{ 'deleteProduct'|trans({}, 'messages') }}</small>
				</h6>
				<h5>{{ 'product'|trans({}, 'messages') }}</h5>
			</div>
			<div class="col-md-6">
				<a href="{{ path('app_product') }}" class="btn btn-secondary float-end">
					<i class="bi bi-arrow-left me-2"></i>
					{{ 'backToList'|trans({}, 'messages') }}
				</a>
			</div>
		</div>

		<div class="card shadow-lg">
			<div class="card-body py-5">
				<div class="container" style="max-width: 600px;">
					<form action="{{ path('app_product_delete_action',{'id': product.id}) }}" method="POST">
						<h4>{{ 'removeProduct'|trans({}, 'messages') }} {{ product.name }}?</h4>

						<h6 class="mt-4 mb-3">{{ 'productInformation'|trans({}, 'messages') }}</h6>

						<li> {{ 'code'|trans({}, 'messages') }}: {{ product.code }}</li>
						<li> {{ 'brand'|trans({}, 'messages') }}: {{ product.brand }}</li>
						<li> {{ 'price'|trans({}, 'messages') }}: {{ product.price }}</li>
						<li class="pb-3"> {{ 'description'|trans({}, 'messages') }}: {{ product.description }}</li>

						<a href="{{ path('app_product') }}" class="btn btn-primary">{{ 'cancel'|trans({}, 'messages') }}</a>
						<input type="submit" value="{{ 'deleteProduct'|trans({}, 'messages') }}" class="btn btn-danger ">					
					</form>
				</div>
			</div>
		</div>
	</div>

{% endblock %}

